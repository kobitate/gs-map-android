<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="5dp"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="16dp"
        >

        <TextView
            android:text="Building Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/infoTitle"
            android:textAppearance="@android:style/TextAppearance.Material.DialogWindowTitle"/>

        <TextView
            android:text="Building #100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/infoBuildingNumber"
            android:textAppearance="@android:style/TextAppearance.Material.Subhead"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout style="@style/BuildingInfoCircleOuter"
                >

                <android.support.v7.widget.CardView
                    style="@style/BuildingInfoCircleButton"
                    android:id="@+id/infoType">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/academic"
                        android:id="@+id/infoTypeIcon"
                        android:foregroundGravity="center_vertical"
                        android:layout_gravity="center_vertical|center"/>
                </android.support.v7.widget.CardView>

                <TextView
                    android:text="Building Type"
                    android:layout_height="wrap_content"
                    android:id="@+id/infoTypeText"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:layout_width="64dp"
                    android:textStyle="normal|bold"/>
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <TextView
            android:text="100 Southern Drive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/infoAddress"/>

        <TextView
            android:text="Statesboro, GA 30458"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/infoAddressCity"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:text="Building Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/infoDetails"/>

    </LinearLayout>

</android.support.v7.widget.CardView>